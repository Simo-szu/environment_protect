<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.youthloop.auth.persistence.mapper.UserPasswordMapper">

  <resultMap id="BaseResultMap" type="com.youthloop.auth.persistence.entity.UserPasswordEntity">
    <id column="user_id" property="userId" jdbcType="OTHER"/>
    <result column="password_hash" property="passwordHash" jdbcType="VARCHAR"/>
    <result column="set_at" property="setAt" jdbcType="TIMESTAMP"/>
    <result column="updated_at" property="updatedAt" jdbcType="TIMESTAMP"/>
  </resultMap>

  <sql id="Base_Column_List">
    user_id, password_hash, set_at, updated_at
  </sql>

  <select id="selectByUserId" resultMap="BaseResultMap">
    SELECT <include refid="Base_Column_List"/>
    FROM shared.user_password
    WHERE user_id = #{userId}::uuid
  </select>

  <insert id="insert">
    INSERT INTO shared.user_password (user_id, password_hash, set_at, updated_at)
    VALUES (
      #{userId}::uuid,
      #{passwordHash},
      #{setAt},
      #{updatedAt}
    )
  </insert>

  <update id="update">
    UPDATE shared.user_password
    SET password_hash = #{passwordHash},
        updated_at = #{updatedAt}
    WHERE user_id = #{userId}::uuid
  </update>

  <update id="updatePassword">
    UPDATE shared.user_password
    SET password_hash = #{passwordHash},
        updated_at = #{updatedAt}
    WHERE user_id = #{userId}::uuid
  </update>

  <delete id="deleteByUserId">
    DELETE FROM shared.user_password
    WHERE user_id = #{userId}::uuid
  </delete>

</mapper>
