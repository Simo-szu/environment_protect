# YouthLoop env (minimal)
# Copy to `.env.local` and adjust if needed.

# App
PORT=8000

# PostgreSQL (Social service runtime user)
DATABASE_URL=postgresql://social_app:postgres@localhost:5432/youthloop

# Redis
REDIS_URL=redis://localhost:6379

# RabbitMQ (you said guest/guest)
RABBITMQ_URL=amqp://guest:guest@localhost:5672

# MinIO (S3-compatible, your command uses API :9000, console :9001)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=youthloop
S3_REGION=us-east-1
S3_FORCE_PATH_STYLE=true

# Google Auth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_SERCET=your-google-client-secret

# Resend
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL=noreply@yourdomain.com