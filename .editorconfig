# EditorConfig 配置文件
# 统一 Windows 和 macOS 开发环境的代码格式
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{java,kt}]
indent_size = 4
max_line_length = 120

[*.{js,jsx,ts,tsx,json,css,scss}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.{xml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.sh]
end_of_line = lf

[*.bat]
end_of_line = crlf
